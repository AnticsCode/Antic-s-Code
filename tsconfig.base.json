{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@env/*": [
        "environments/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@services/*": [
        "app/core/services/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@pages/*": [
        "app/pages/*"
      ],
      "@layout/*": [
        "app/shared/components/layout/*"
      ],
      "@store/*": [
        "app/core/ngrx/*"
      ],
      "@snippets/*": [
        "app/shared/components/snippets/*"
      ]
    }
  }
}
